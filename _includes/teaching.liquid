<div class="col">
  <div class="card h-100 hoverable">
    <div class="card-body">
      {% if teaching.link %}
        {% if teaching.category == 'supervision' %}
          <a href="{{ teaching.link }}"><h2 class="card-title">{{ teaching.title }}<br><i><small><small>{{ teaching.thesistitle }}</small></small></i></h2></a>
        {% else %}
          <a href="{{ teaching.link }}"><h2 class="card-title">{{ teaching.title }}</h2></a>
        {% endif %}
      {% else %}
        {% if teaching.category == 'supervision' %}
          <h2 class="card-title">{{ teaching.title }}<br><i><small><small>{{ teaching.thesistitle }}</small></small></i></h2>
        {% else %}
          <h2 class="card-title">{{ teaching.title }}</h2>
        {% endif %}
      {% endif %}
      <p class="card-text">{{ teaching.description }} {% if teaching.moodle %} | <a href="{{ teaching.moodle }}"><i class="ai ai-moodle"></i> Moodle</a> {% endif %}</p>
      <div class="row ml-1 mr-1 p-0">
      </div>
    </div>
  </div>
</div>
