<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign grants = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in grants %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center" style="width: 75px">
          {% if content.releaseDate %} {% assign date = content.releaseDate | split: '-' | join: '.' %} {% else %} {% assign date = '' %} {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ date }}</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}
              <a href="{{ content.url }}">{{ content.name }}</a>
            {% else %}
              {{ content.name }}
            {% endif %}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
            {% if content.fundurl -%}
              <a href="{{ content.fundurl }}">{{ content.fund }}</a>
            {% else %}
              {{ content.fund }}
            {% endif %}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
            {% if content.organisationurl -%}
              <a href="{{ content.organisationurl }}">{{ content.organisation }}</a>
            {% else %}
              {{ content.organisation }}
            {% endif %}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.value }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
